---
import Section from "@/components/Section.astro";
import { education } from "@cv";
const studyTypeLabels: Record<string, string> = {
  technologist: "Tecnólogo",
  bachelor: "Licenciatura",
  master: "Maestría",
  doctorate: "Doctorado",
};
---

<Section title="Educación">
  <ul>
    {
      education.map(
        ({ institution, area, studyType, startDate, endDate, url }) => {
          const startYear = new Date(startDate).getFullYear();
          const endYear =
            endDate !== null ? new Date(endDate).getFullYear() : "Actual";
          const years = `${startYear} - ${endYear}`;
          const displayStudyType = studyTypeLabels[studyType] ?? studyType;
          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>
                      {url ? (
                        <a href={url} target="_blank" rel="noopener noreferrer">
                          {institution}
                        </a>
                      ) : (
                        institution
                      )}
                    </h3>
                    <h4>{area}</h4>
                    {studyType && (
                      <small class="study-type">{displayStudyType}</small>
                    )}
                  </div>

                  <time>{years}</time>
                </header>
              </article>
            </li>
          );
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article h3 a {
    color: inherit;
    text-decoration: none;
    text-underline-offset: 2px;
    cursor: pointer;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  .study-type {
    display: inline-block;
    margin-top: 2px;
    font-size: 0.85rem;
    color: #444;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    font-size: 0.85rem;
    color: #555;
  }
</style>
